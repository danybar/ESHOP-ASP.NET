@model CarouselSlide

@{
    if (ViewBag.Akce != null)
    {
        <form asp-action="@ViewBag.Akce" method="post">
            @{
                if (ViewBag.Akce == "Edit")
                {
                    <input asp-for="ID" type="hidden" />
                }
            }
            <div class="form-group">
                <label asp-for="ImageSrc">Image Source</label>
                <input asp-for="ImageSrc" class="form-control" placeholder="Enter path to image ...">
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alternative Text</label>
                <input asp-for="ImageAlt" class="form-control" placeholder="Enter alternative text ...">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}